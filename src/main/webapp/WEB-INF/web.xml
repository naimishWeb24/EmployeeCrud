<web-app  >
  <display-name>Archetype Created Web Application</display-name>
  		<servlet>
 			 <servlet-name>InsertEmployeeServlet</servlet-name>
  			 <servlet-class>com.employeecrud.controller.InsertEmployeeServlet</servlet-class>
		</servlet>
		<servlet>
		  <servlet-name>DeleteServlet</servlet-name>
		  <servlet-class>com.employeecrud.controller.DeleteServlet</servlet-class>
		</servlet>
		<servlet>
			<servlet-name>DisplayServlet</servlet-name>
			<display-name>DisplayServlet</display-name>
			<description></description>
			<servlet-class>com.employeecrud.controller.DisplayServlet</servlet-class>
		</servlet>
			<servlet-mapping>
			  <servlet-name>InsertEmployeeServlet</servlet-name>
			  <url-pattern>/InsertEmployeeServlet</url-pattern>
			</servlet-mapping>
			<servlet-mapping>
			  <servlet-name>DeleteServlet</servlet-name>
			  <url-pattern>/DeleteServlet</url-pattern>
			</servlet-mapping>
			<servlet-mapping>
				<servlet-name>DisplayServlet</servlet-name>
				<url-pattern>/DisplayServlet</url-pattern>
			</servlet-mapping>
</web-app>
